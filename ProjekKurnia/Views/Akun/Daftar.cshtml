@model User;

@{
    Layout = "_AkunLayout";
}

<div class="text-center">
    <h1 class="h4 text-gray-900 mb-4">Create an Account!</h1>
</div>

<form asp-action="Daftar" class="user">
    <div class="form-group">
        <input asp-for="Username" class="form-control form-control-user" placeholder="Username" />

    </div>
    <div class="form-group">
        <input asp-for="Password" type="password" class="form-control form-control-user" placeholder="Password" />
    </div>
    <div class="form-group">
        <input asp-for="Name" class="form-control form-control-user" placeholder="Nama Lengkap">
    </div>
    <div class="form-group">
        <input asp-for="Email" type="email" class="form-control form-control-user" placeholder="Email">
    </div>
    <input type="submit" class="btn btn-primary btn-user btn-block" value="Register Account" />
    
</form>
<hr>
<div class="text-center">
    <a class="small" asp-action="Masuk">Already have an account? Login!</a>
</div>